 				if ( isset( $h['type'] ) && $h['type'] == $needle )
 					return true;
@@ -695,4 +695,4 @@ if( !function_exists('wpb_wps_custom_meta_box') ){
 
 
 	}
-}
\ No newline at end of file
+}
