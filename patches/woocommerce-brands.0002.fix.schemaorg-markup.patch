Subject: [PATCH] Fixed incorrect product brand schema markup. (#810)

---
 includes/class-wc-brands.php | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/includes/class-wc-brands.php b/includes/class-wc-brands.php
index cee15e4bf..568adb71b 100644
--- a/includes/class-wc-brands.php
+++ b/includes/class-wc-brands.php
@@ -401,7 +401,12 @@ class WC_Brands {
 
 		if ( ! empty( $brands ) && is_array( $brands ) ) {
 			// Can only return one brand, so pick the first.
-			$markup['brand'] = $brands[0]->name;
+			$markup['brand'] = array(
+				'@type' => 'Brand',
+				'name' => $brands[0]->name,
+				'url' => get_term_link( $brands[0]->slug, 'product_brand' ),
+				'logo' => get_brand_thumbnail_url( $brands[0]->term_id ),
+			);
 		}
 
 		return $markup;
